# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# Note: If your tables are in a custom schema (e.g., 'hr'), add: ?options=-c search_path=hr,public
DATABASE_URL=postgresql://user:password@localhost:5432/hr_testing

# -----------------------------------------------------------------------------
# ANTHROPIC CLAUDE AI CONFIGURATION
# -----------------------------------------------------------------------------
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# -----------------------------------------------------------------------------
# LDAP / ACTIVE DIRECTORY AUTHENTICATION
# -----------------------------------------------------------------------------
# Enable or disable LDAP authentication (set to "True" to activate)
LDAP_ENABLED=False

# LDAP Server Configuration (PLACEHOLDER VALUES - Update from IT department)
LDAP_DOMAIN=UNIVERSAL
LDAP_HOST=ldap-server.company.local
LDAP_PORT=389
LDAP_BASE_DN=OU=Employees,DC=company,DC=local

# LDAP Security Settings
LDAP_USE_SSL=False
LDAP_USE_TLS=False
LDAP_TIMEOUT=10

# -----------------------------------------------------------------------------
# PERMITTED USERS WHITELIST
# -----------------------------------------------------------------------------
# Format: EMPLOYEE_ID:NAME:ROLE:PERMISSIONS;EMPLOYEE_ID:NAME:ROLE:PERMISSIONS
# Roles: hr, manager, employee
# Permissions: read,write,admin (comma-separated, no spaces)
#
# Example:
# PERMITTED_USERS=00058215:Nadir:hr:read,write,admin;00037099:Saltanat:hr:read,write,admin;00060673:Meirim:manager:read,write
#
# PLACEHOLDER VALUES (Replace with real employee IDs):
PERMITTED_USERS=PLACEHOLDER_EMPLOYEE_ID_1:Test User 1:hr:read,write,admin;PLACEHOLDER_EMPLOYEE_ID_2:Test User 2:manager:read,write;PLACEHOLDER_EMPLOYEE_ID_3:Test User 3:employee:read

# -----------------------------------------------------------------------------
# JWT SECRET KEY
# -----------------------------------------------------------------------------
# CRITICAL: Generate a strong random secret key for production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# PLACEHOLDER VALUE (MUST CHANGE IN PRODUCTION!):
JWT_SECRET_KEY=PLACEHOLDER-SECRET-KEY-CHANGE-IN-PRODUCTION-MIN-32-CHARS

# -----------------------------------------------------------------------------
# RECAPTCHA CONFIGURATION (Optional for testing)
# -----------------------------------------------------------------------------
# Get keys from: https://www.google.com/recaptcha/admin
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
# Application host and port
HOST=0.0.0.0
PORT=8000

# Debug mode (set to "True" for development, "False" for production)
DEBUG=False

